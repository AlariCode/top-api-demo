		"ts-loader": "^8.0.8",
		"ts-node": "^10.4.0",
		"tsconfig-paths": "^3.9.0",
		"tslint": "^6.1.3",
		"typescript": "^4.5.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
